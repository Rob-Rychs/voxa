{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script"
  },
  "installedESLint": true,
  "ecmaFeatures": {
    "impliedStrict": false
  },
  "plugins": [
    "import"
    ],
    "rules": {
      "no-unused-expressions": "off",
      "no-use-before-define": "off",
      "no-param-reassign": "off",
      "import/no-extraneous-dependencies": "off",
      "global-require": "off",
      "import/no-dynamic-require": "off"
    },
    "env": {
      "browser": false,
      "node": true,
      "mocha": true
    }
}
